<div id="editPlaylist">
	<div class="formHeader">
		<h1>Edit the Playlist </h1>
		<p>All fields are mandatory</p>
	</div>
		
	<form class="formContainer" action="/playlists/edit/{{playlist._id}}" method="POST" class="form">
		<div class="formInfo">
			<div>
				<label class="inputTitle" for="">Title</label>
				<input class="inputField" type="text" name="title" value="{{playlist.title}}">
			</div>

			<div>
				<label class="inputTitle one" for="">Description</label>
				<textarea class="inputField two" type="text" name="description" rows="4">{{playlist.description}}</textarea>
			</div>
		</div>

		<div class="actionButtons">
			<button class="secondaryButton" type="sumbmit">Cancel</button>
			<button class="primaryButton" type="sumbmit">Save changes</button>
		</div>	
	</form>
</div>