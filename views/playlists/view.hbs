<div id='playlistView'>
	<div class='playlistHeader'>
		<div class='playlistInfo'>
			<h2>{{playlist.title}}</h2>
			<h4>{{playlistUserName}}</h4>
		</div>

		<div class='playlistBtn'>
			{{{playlistButtons}}}
		</div>
	</div>
	<div class='playlistContent'>
		<article>
			{{playlist.description}}
		</article>
		<h2>Videos</h2>

		{{#if ownerInterface}}
			{{#each playlist.videos}}
				<div id='videoCard' class='vidScard flexRow'>
					<a href='/playlists/{{playlistID}}/{{_id}}'>
						<iframe src='{{videoUrl}}' class='videothumb'></iframe>
					</a>

					<a href='/playlists/{{playlistID}}/{{_id}}' class='vidSinfo vidSinfoOwner'>
						<h3>{{title}}</h3>
                        <h4>by {{videoAuthor}}</h4>
						<p>{{description}}</p>
					</a>

					<div class='vidSbtn'>
						<a href='/playlists/delete-video/{{playlistID}}/{{_id}}'> ‚ùå </a>
						<a href='/playlists/edit-video/{{playlistID}}/{{_id}}'> üìù</a>
					</div>
				</div>
			{{/each}}
		{{/if}}

		{{#if userInterface}}
			{{#each playlist.videos}}
                <div id='videoCard' class='vidScard flexRow'>
					<a href='/playlists/{{playlistID}}/{{_id}}'>
						<iframe src='{{videoUrl}}' class='videothumb'></iframe>
					</a>

					<a href='/playlists/{{playlistID}}/{{_id}}' class='vidSinfo vidSinfoUser'>
						<h3>{{title}}</h3>
						<p>{{description}}</p>
						<h4>by {{videoAuthor}}</h4>
					</a>
				</div>
			{{/each}}
		{{/if}}
	</div>

</div>